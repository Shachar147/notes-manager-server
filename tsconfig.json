{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true, // Add this line
    "emitDecoratorMetadata": true,   // Add this line
    "strictPropertyInitialization": false // Add this line
  }
}